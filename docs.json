{
  "$schema": "https://mintlify.com/schema.json",
  "theme": "mint",
  "name": "QFPay Developer Centre",
  "colors": {
    "primary": "#005FCC",
    "light": "#4EA8FF",
    "dark": "#004299"
  },
  "favicon": "/images/logo.png",
  "navigation": {
    "global": {
      "anchors": [
        {
          "anchor": "QFPay Website",
          "icon": "book-open-cover",
          "href": "https://www.qfpay.global"
        }
      ]
    },
    "languages": [
      {
        "language": "en",
        "tabs": [
          {
            "tab": "Home",
            "groups": [
              {
                "group": "Getting Started",
                "pages": [
                  "quickstart",
                  "development"
                ]
              }
            ]
          },
          {
            "tab": "Integration",
            "groups": [
              {
                "group": "Preparation",
                "pages": [
                  "integration/preparation/introduction",
                  "integration/preparation/environments"
                ]
              },
              {
                "group": "API Reference",
                "pages": [
                  "api-reference/request-format",
                  "api-reference/response-format",
                  "api-reference/signature-generation",
                  "api-reference/paytypes",
                  "api-reference/currencies",
                  "api-reference/status-codes",
                  "api-reference/api-usage-guidelines"
                ]
              }
            ]
          }
        ]
      },
      {
        "language": "zh-Hant",
        "tabs": [
          {
            "tab": "首頁",
            "groups": [
              {
                "group": "開始使用",
                "pages": [
                  "zh-hant/quickstart",
                  "zh-hant/development"
                ]
              }
            ]
          },
          {
            "tab": "對接指南",
            "groups": [
              {
                "group": "準備事項",
                "pages": [
                  "integration/preparation/zh-hant/file",
                  "integration/preparation/zh-hant/environments"
                ]
              },
              {
                "group": "API 參考文件",
                "pages": [
                  "integration/api-reference/zh-hant/request-format",
                  "integration/api-reference/zh-hant/response-format",
                  "integration/api-reference/zh-hant/signature-generation",
                  "integration/api-reference/zh-hant/paytypes",
                  "integration/api-reference/zh-hant/currencies",
                  "integration/api-reference/zh-hant/status-codes",
                  "integration/api-reference/zh-hant/api-usage-guidelines"
                ]
              }
            ]
          }
        ]
      }
    ]
  },
  "logo": "/logo.png",
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:hi@mintlify.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.mintlify.com"
    }
  },
  "ai": {
    "enabled": true
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/mintlify",
      "github": "https://github.com/mintlify",
      "linkedin": "https://linkedin.com/company/mintlify"
    }
  },
  "appearance": {
    "default": "light"
  }
}
